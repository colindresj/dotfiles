[user]
  name = JC
  email = jorge.e.colindres@gmail.com
[credential]
  helper = osxkeychain
[alias]
  undopush = push -f origin HEAD^:master
  addremove = add . && ls-files --deleted | xargs git rm
  a = add
  ap = add -p
  st = status
  co = checkout
  cob = checkout -b
  br = branch
  ri = rebase -i
  cp = cherry-pick --signoff
  github = remote show origin
  update = !git fetch origin && git rebase origin/master
  done = !git fetch && git rebase origin/master && git checkout master && git merge @{-1} && rake
  delete = !sh -c 'git branch -D $1 && git push origin :$1'
  pr = !sh 'hub pull-request | pbcopy'
  who = shortlog -n -s --no-merges
  clean = !git remote prune origin && git gc
[color]
  ui = true
[core]
  excludesfile = /Users/JC/.gitignore_global
  editor = vi
[push]
  default = tracking
